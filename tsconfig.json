{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": ["es2017", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,

    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "baseUrl": "./"
  },
  "ts-node": {
    "swc": true
  }
}
